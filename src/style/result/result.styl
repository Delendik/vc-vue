.result
  display: none
  position: relative
  font-family: Roboto, sans-serif

  &_visible
    display: block

  &__container
    display: flex
    justify-content: space-between
    padding-top: 13px

  &__other-info
    background: #FEEBEF

  &__open
    width: 100%
    height: 67px
    color: #FE4D4A
    font-weight: 400
    font-size: 16px
    line-height: 19px
    display: flex
    align-items: center
    justify-content: center
    margin-top: 10px

  &__other-text
    margin-right: 15px
    &:hover
      cursor: pointer

  &__close
    padding-top: 20px
    margin-top: 10px

.no-display
  display: none