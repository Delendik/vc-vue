.footer
  height 100px
  display: flex
  align-items: center
  justify-content: center
  font-family: Roboto, sans-serif
  font-style: normal
  font-weight: 500
  font-size: 16px
  line-height: 19px

  &__text
    color: #000000
    margin-right: 29px

  &__button
    width: 134px;
    height: 45px;
    background: #FE4D4A;
    border-radius: 5px;
    color: #FFFFFF
    border: none
    outline: none
    font-weight: 500
    font-size: 16px
    line-height: 19px
    &:hover
      cursor: pointer
